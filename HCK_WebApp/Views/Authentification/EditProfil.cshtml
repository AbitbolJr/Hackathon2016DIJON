@model HCK_WebApp.Models.UserEditProfilVM

@{
    ViewBag.Title = "EditProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profil général</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.prenom, new { htmlAttributes = new { @class = "form-control", placeholder ="Prénom ou Pseudo" } })
                @Html.ValidationMessageFor(model => model.prenom, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="dateDeNaissance" name="dateDeNaissance" type="text" value="@Model.dateDeNaissance.ToShortDateString()" />
            </div>
        </div>


        <div class="groupeLoisir">
            <div class="form-group">
                <div class="col-md-12">
                    <div class="">
                        <span class="control-label">Activer le profil loisir :</span>

                        @Html.EditorFor(model => model.actifLoisir)
                        @Html.ValidationMessageFor(model => model.actifLoisir, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.descriptionLoisir, new { htmlAttributes = new { @class = "form-control", placeholder = "Description de loisir" } })
                    @Html.ValidationMessageFor(model => model.descriptionLoisir, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="groupePro">

            <div class="form-group">
                <div class="col-md-12">
                    <div class="">
                        <span class="control-label">Activer le profil professionnel :</span>
                        @Html.EditorFor(model => model.actifPro)
                        @Html.ValidationMessageFor(model => model.actifPro, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control", placeholder = "Nom" } })
                    @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.fonction, new { htmlAttributes = new { @class = "form-control", placeholder = "Fonction" } })
                    @Html.ValidationMessageFor(model => model.fonction, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.entreprise, new { htmlAttributes = new { @class = "form-control", placeholder = "Entreprise" } })
                    @Html.ValidationMessageFor(model => model.entreprise, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.descriptionPro, new { htmlAttributes = new { @class = "form-control", placeholder = "Description professionnel" } })
                    @Html.ValidationMessageFor(model => model.descriptionPro, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12 zoneAction">
                    Lier son compte :  <a href=""><img src="~/Image/LinkedIn_Logo.svg.png" /></a>
                </div>
            </div>
        </div>

        <br/>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Enregistrer les modifications" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
